<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_degrade"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoMeusAlunos"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"

                android:src="@drawable/perfil"
                app:civ_border_color="#688FDD"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/nomeMeusAlunos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Nome:"
                android:textColor="#C8C7C7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailMeusAlunos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Email:"
                android:textColor="#C8C7C7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/valorMeusAlunos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Valor do pagamento:"
                android:textColor="#C8C7C7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dataPagamentoMeusAlunos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Data do Ãºltimo pagamento: dd/mm/aaaa"
                android:textColor="#C8C7C7"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degrade"
    tools:context=".controle.TelaProvisoria">

    <EditText
        android:id="@+id/biografiaTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Fale um pouco sobre você!"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enderecoTelaProvisoria" />

    <EditText
        android:id="@+id/valorTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Digite o valor das suas aulas"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disponibilidadeTelaProvisoria" />

    <EditText
        android:id="@+id/enderecoTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Digite aqui o seu endereço"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instrumentosTelaProvisoria" />

    <EditText
        android:id="@+id/instrumentosTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Digite aqui os seus instrumentos"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeTelaProvisoria" />

    <Button
        android:id="@+id/buttonEditarTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_button"
        android:text="Confirmar"
        android:textColor="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTelaProvisoria" />

    <EditText
        android:id="@+id/emailTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorTelaProvisoria" />

    <EditText
        android:id="@+id/nomeTelaProvisoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alterarFotoTelaProvisoria" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoTelaProvisoria"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#688FDD"
        app:civ_border_width="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/alterarFotoTelaProvisoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Alterar Foto"
        android:textColor="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoTelaProvisoria" />

    <ProgressBar
        android:id="@+id/progressBarTelaProvisoria"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTelaProvisoria" />

    <Switch
        android:id="@+id/disponibilidadeTelaProvisoria"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:checked="false"
        android:text="Disponibilidade"
        android:textColor="#C8C7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biografiaTelaProvisoria" />
</androidx.constraintlayout.widget.ConstraintLayout>
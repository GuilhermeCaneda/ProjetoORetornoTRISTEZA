<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degrade"
    tools:context=".controle.CadastroAluno">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoCadastroAluno"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#688FDD"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toTopOf="@+id/nomeCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/nomeCadastroAluno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textColor="#C8C7C7"
        android:textColorHint="#C8C7C7"
        app:layout_constraintBottom_toTopOf="@+id/fetariaCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoCadastroAluno" />

    <EditText
        android:id="@+id/emailCadastroAluno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:textColorHint="#C8C7C7"
        android:textColor="#C8C7C7"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/senhaCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetariaCadastroAluno" />

    <EditText
        android:id="@+id/senhaCadastroAluno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:textColorHint="#C8C7C7"
        android:textColor="#C8C7C7"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailCadastroAluno" />

    <Spinner
        android:id="@+id/fetariaCadastroAluno"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_spinner"
        android:textColor="#C8C7C7"
        android:paddingLeft="-3dp"
        app:layout_constraintBottom_toTopOf="@+id/emailCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeCadastroAluno" />

    <Button
        android:id="@+id/buttonCadastroAluno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Cadastrar"
        android:background="@drawable/bg_button"
        android:textColor="#C8C7C7"
        app:layout_constraintBottom_toTopOf="@+id/progressBarCadastroAluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhaCadastroAluno" />

    <ProgressBar
        android:id="@+id/progressBarCadastroAluno"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastroAluno" />

</androidx.constraintlayout.widget.ConstraintLayout>
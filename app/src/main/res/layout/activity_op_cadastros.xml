<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degrade"
    tools:context=".controle.OpCadastros">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/opCadastroAluno"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#688FDD"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toTopOf="@+id/opCadastroProfessor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/opCadastroProfessor"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#688FDD"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opCadastroAluno" />
</androidx.constraintlayout.widget.ConstraintLayout>
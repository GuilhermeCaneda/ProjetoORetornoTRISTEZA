<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_degrade"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoListagemProfessor"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/perfil"
            app:civ_border_color="#688FDD"
            app:civ_border_width="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeListagemProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:text="Nome"
                android:textColor="#C8C7C7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enderecoListagemProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="EndereÃ§o"
                android:textColor="#C8C7C7" />

            <TextView
                android:id="@+id/emailListagemProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="E-mail"
                android:textColor="#C8C7C7" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>